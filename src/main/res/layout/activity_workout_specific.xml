<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutSpecific">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/workoutUpdateButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="업데이트"/>
        <Button
            android:id="@+id/workoutDeleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="제거"/>
        <Button
            android:id="@+id/workoutChangeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수정"/>

    </LinearLayout>

    <ScrollView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/workoutNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workout 이름"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/workoutName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="벤치프레스"
                    android:textSize="25sp"
                    android:layout_below="@+id/workoutNameText"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/workoutWeightText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="weight"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/workoutWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:textSize="25sp"
                    android:layout_below="@+id/workoutWeightText"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/workoutRepText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="repitition"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/workoutRep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="25sp"
                    android:layout_below="@+id/workoutRepText"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/workoutSetText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sets"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/workoutSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25sp"
                    android:layout_below="@+id/workoutSetText"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>